# Azure DevOps Personal Access Token (Required)
# Scopes needed: Code (Read), Project and Team (Read), Release (Read - for deployment metrics)
ADO_PAT=your_personal_access_token_here

# Azure DevOps Organization (Required)
ADO_ORG=your_organization_name

# Azure DevOps Project (Required)
ADO_PROJECT=your_project_name

# Optional: Filter repositories by name
ADO_SEARCH_QUERY=

# Optional: Deployment metrics configuration
# If these are not set, deployment metrics will not be collected
ADO_DEPLOYMENT_PIPELINE=<your_pipeline_name>
ADO_DEPLOYMENT_STAGE=<your_stage_name_in_release_pipeline>
ADO_DEPLOYMENT_LOOKBACK_DAYS=30

# Optional: Work item metrics configuration
# Note: Work item types are configured in colconfig.yaml as a YAML array
# Edit colconfig.yaml to customize which work item types to track
# Number of days to look back for work items (default: 30)
ADO_WORK_ITEM_LOOKBACK_DAYS=30